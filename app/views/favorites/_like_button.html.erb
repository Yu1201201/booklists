<% if current_user.favpost?(booklist) %>
  <%= form_with(model: current_user.favorites.find_by(booklist_id: booklist.id), local: true,  method: :delete, class: "d-inline") do |f| %>
    <%= hidden_field_tag :booklist_id, booklist.id %>
    <%= f.submit 'お気に入り登録解除', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true, class: "d-inline") do |f| %>
    <%= hidden_field_tag :booklist_id, booklist.id %>
    <%= f.submit 'お気に入り登録', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>  